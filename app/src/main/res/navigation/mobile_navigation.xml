<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.bloodconnect.fragment.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_donate"
            app:destination="@id/donate" />
        <action
            android:id="@+id/action_home_to_request"
            app:destination="@id/request" />
    </fragment>
    <fragment
        android:id="@+id/donate"
        android:name="com.example.bloodconnect.fragment.fragment.DonateFragment"
        android:label="fragment_donate"
        tools:layout="@layout/fragment_donate" >
        <action
            android:id="@+id/action_donate_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/request"
        android:name="com.example.bloodconnect.fragment.fragment.RequestFragment"
        android:label="fragment_request"
        tools:layout="@layout/fragment_request" >
        <action
            android:id="@+id/action_request_to_home"
            app:destination="@id/home" />
    </fragment>
</navigation>